# ðŸ”¹ Imagen base oficial de PHP con FPM
FROM php:8.2-fpm

# ðŸ”¹ Directorio de trabajo
WORKDIR /var/www/html

# ðŸ”¹ Dependencias del sistema y extensiones PHP
# - Agregamos ca-certificates + libcurl + php-curl para HTTPS
RUN apt-get update && apt-get install -y \
    libzip-dev libpng-dev libjpeg62-turbo-dev libfreetype6-dev \
    libicu-dev libonig-dev libpq-dev git unzip curl npm zip \
    ca-certificates libcurl4-openssl-dev \
 && docker-php-ext-install pdo_pgsql mbstring zip exif pcntl bcmath intl \
 && docker-php-ext-configure gd --with-freetype --with-jpeg \
 && docker-php-ext-install gd curl \
 && update-ca-certificates \
 && apt-get clean && rm -rf /var/lib/apt/lists/*

# ðŸ”¹ Copiar package.json primero para cache de npm
COPY package*.json ./

# ðŸ”¹ Build args para Vite (Google Maps y frontend)
ARG VITE_APP_URL
ARG VITE_DEFAULT_CENTER_LAT
ARG VITE_DEFAULT_CENTER_LNG
ARG VITE_GMAPS_API_KEY
ARG VITE_GMAPS_MAP_ID

ENV VITE_APP_URL=$VITE_APP_URL \
    VITE_DEFAULT_CENTER_LAT=$VITE_DEFAULT_CENTER_LAT \
    VITE_DEFAULT_CENTER_LNG=$VITE_DEFAULT_CENTER_LNG \
    VITE_GMAPS_API_KEY=$VITE_GMAPS_API_KEY \
    VITE_GMAPS_MAP_ID=$VITE_GMAPS_MAP_ID

# ðŸ”¹ Instalar dependencias de frontend
RUN npm ci

# ðŸ”¹ Copiar el resto del proyecto
COPY . .

# ðŸ”¹ Instalar Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# ðŸ”¹ Instalar dependencias de Laravel (producciÃ³n)
RUN composer install --no-dev --optimize-autoloader --no-interaction --prefer-dist

# ðŸ”¹ Build de frontend (Vite)
RUN npm run build

# ðŸ”¹ Crear directorios y permisos
RUN mkdir -p storage bootstrap/cache \
 && chmod -R 775 storage bootstrap/cache \
 && chown -R www-data:www-data storage bootstrap/cache

# ðŸ”¹ Exponer puerto
EXPOSE 8080

# ðŸ”¹ Comando de inicio (runtime)
# - NUNCA borrar BD en prod
# - Migrar, enlazar storage, optimizar y servir
# - Si quieres sembrar datos en arranque, usa SEED_ON_BOOT=true en env
CMD set -e; \
    php artisan optimize:clear; \
    php artisan migrate --force; \
    php artisan storage:link || true; \
    if [ "${SEED_ON_BOOT:-false}" = "true" ]; then php artisan db:seed --force; fi; \
    php artisan optimize; \
    php artisan serve --host=0.0.0.0 --port=8080
